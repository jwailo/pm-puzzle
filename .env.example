# PM Puzzle Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Security Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
SESSION_SECRET=generate-a-random-32-character-string-here

# Admin Configuration
ADMIN_PASSWORD_HASH=hashed-admin-password-here
ADMIN_EMAIL_WHITELIST=admin@example.com,manager@example.com

# CHANTHU_REVIEW_DEPTH=found_it_excellent_work
